<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_movie_LAY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5"
    android:padding="20dp"
    android:layout_rowSpan="15"
    android:orientation="vertical"
    tools:context=".views.MovieDetailsActivity">

    <TextView
        android:id="@+id/activity_movie_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        />

    <TextView
        android:id="@+id/activity_movie_LBL_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gen"
        android:textColor="#041055"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVERVIEW:"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/activity_movie_LBL_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OVERVIEW:"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LANGUAGES:"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/activity_movie_LBL_languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAN:"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult:"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/activity_movie_LBL_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adult:"
        android:textColor="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUNTIME:"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/activity_movie_LBL_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="runTime:"
        android:textColor="@color/black"
        android:textSize="15dp"/>

</LinearLayout>